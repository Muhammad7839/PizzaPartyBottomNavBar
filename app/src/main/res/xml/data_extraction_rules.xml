<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- ToDo 10: Include essential app data like shared preferences and exclude cache files -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <exclude domain="file" path="cache/" />
    </cloud-backup>

    <device-transfer>
        <!-- ToDo 10 applied: Allow the same essential data to be transferred between devices -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>